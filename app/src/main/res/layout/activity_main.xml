<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/fondocuadrados">
    <ScrollView android:layout_height="match_parent" android:layout_width="match_parent">
        <LinearLayout android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_width="match_parent">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:src="@drawable/titutlorecetas" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="108dp"
        android:src="@drawable/banderines2"
        android:layout_marginTop="-30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID"
            android:layout_marginLeft="20dp"
            android:textSize="25dp"
            android:inputType="number"
            android:textColor="#eaaa29"
            android:textStyle="bold"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="15"
            android:id="@+id/idd"
            android:hint="Identificador"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NOMBRE"
            android:layout_marginLeft="20dp"
            android:textSize="25dp"
            android:textColor="#eaaa29"
            android:textStyle="bold"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="15"
            android:id="@+id/nombre"
            android:hint="Nombre de receta"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INGREDIENTES"
            android:layout_marginLeft="20dp"
            android:textSize="25dp"
            android:textColor="#eaaa29"
            android:textStyle="bold"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="15"
            android:id="@+id/ingredientes"
            android:hint="Nombre de receta"
            android:layout_marginLeft="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PREPARACION"
        android:layout_marginLeft="20dp"
        android:textSize="25dp"
        android:textColor="#eaaa29"
        android:textStyle="bold"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="15"
        android:id="@+id/preparacion"
        android:hint="Preparacion de receta"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OBSERVACIONES "
        android:layout_marginLeft="20dp"
        android:textSize="25dp"
        android:textColor="#eaaa29"
        android:textStyle="bold"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="15"
        android:id="@+id/observaciones"
        android:hint="Observaciones de receta"
        android:layout_marginLeft="10dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal">
        <Button
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="INSERTAR"
            android:id="@+id/insertar"
            android:background="#f2af88"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ACTUALIZAR"
            android:id="@+id/actualizar"
            android:background="#f2af88"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal">
        <Button
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="BORRAR"
            android:id="@+id/borrar"
            android:background="#f2af88"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CONSULTAR"
            android:id="@+id/aconsultar"
            android:background="#f2af88"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>

    <Button android:background="#c0ffd9"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="#e944ac"
        android:layout_marginLeft="10dp"
        android:text="LIMPIAR"
        android:id="@+id/limpiar"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>

    </ScrollView>



</LinearLayout>